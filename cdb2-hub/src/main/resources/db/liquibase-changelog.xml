<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="hub-1" author="landry">
        <createTable tableName="country">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="deleted" type="bit" defaultValueBoolean="false" />
            <column name="created_by" type="varchar(255)"></column>
            <column name="created_on" type="datetime"></column>
            <column name="modified_by" type="varchar(255)"></column>
            <column name="modified_on" type="datetime"></column>
            <column name="active" type="bit" defaultValueBoolean="true" />
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="url" type="varchar(255)" />
        </createTable>

        <createTable tableName="sync">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="deleted" type="bit" defaultValueBoolean="false" />
            <column name="created_by" type="varchar(255)"></column>
            <column name="created_on" type="datetime"></column>
            <column name="modified_by" type="varchar(255)"></column>
            <column name="modified_on" type="datetime"></column>
            <column name="exec_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="country" type="bigint">
                <constraints nullable="false" foreignKeyName="FK_sync_country" referencedTableName="country" referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="hub-2" author="landry">
        <addColumn tableName="country">
            <column name="user" type="varchar(30)"></column>
            <column name="password" type="varchar(50)"></column>
        </addColumn>
    </changeSet>
    <changeSet id="hub-3" author="landry">
        <renameTable newTableName="country_sync" oldTableName="country"/>
    </changeSet>
    <changeSet id="hub-4" author="landry">
        <dropForeignKeyConstraint baseTableName="sync" constraintName="FK_sync_country"/>
        <addForeignKeyConstraint constraintName="FK_sync_country" referencedTableName="country_sync" baseColumnNames="country" baseTableName="sync" referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="hub-5" author="landry">
        <addColumn tableName="country_sync">
            <column name="country_code" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="hub-6" author="landry">
        <addColumn tableName="sync">
            <column name="active" type="boolean" defaultValue="true"/>
        </addColumn>
    </changeSet>
    <changeSet id="hub-7" author="landry">
        <dropNotNullConstraint tableName="sync" columnName="exec_date" columnDataType="datetime"/>
    </changeSet>
    <changeSet id="hub-8" author="landry">
        <addColumn tableName="sync">
            <column name="message" type="varchar(255)"></column>
        </addColumn>
    </changeSet>
    <changeSet id="hub-9" author="landry">
        <renameColumn tableName="sync" oldColumnName="exec_date" newColumnName="end_date" columnDataType="datetime"/>
        <addColumn tableName="sync">
            <column name="start_date" type="datetime"></column>
        </addColumn>
    </changeSet>
    <changeSet id="hub-10" author="landry">
        <addColumn tableName="country_sync">
            <column name="frequency" type="char(5)" defaultValue="02:00">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>